{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('web/bundles/frontend/js/bootstrap.min.js')}}"></script>
    <script src="{{asset('web/bundles/frontend/js/lightslider.min.js')}}"></script>
    <script type="text/javascript">
        $('#image-gallery').lightSlider({
            gallery:true,
            item:1,
            thumbItem:9,
            slideMargin: 0,
            speed:500,
            auto:true,
            loop:true,
            onSliderLoad: function() {
                $('#image-gallery').removeClass('cS-hidden');
            }  
        });
        $(document).ready(function() {
            $('.lSGallery li img').on('click', function(){
                var src = $(this).prop('src').replace('thumb', 'large');
                $("#imgX").prop({"src": src});
                $("#imgmask").css({"display": "block"});
            });
            $("#imgmask").on('click', function(){
                $(this).css({"display": "none"});
            });
        });
        $(window).on('resize orientationchange', function (e) {
            setTimeout(function () {
                $('.lSGallery li img').on('click', function(){
                    var src = $(this).prop('src').replace('thumb', 'large');
                    $("#imgX").prop({"src": src});
                    $("#imgmask").css({"display": "block"});
                });
                $("#imgmask").on('click', function(){
                    $(this).css({"display": "none"});
                });
            }, 205);
        });
    </script>
